<h1>Burgers</h1>

<h2>Burgers not eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless eat}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if eat}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eat">Hungry</label><br>
    <input type="radio" name="eat" value="1" checked> Eaten!<br>
    <input type="radio" name="eat" value="0"> throw up
  </div>

  <button type="submit">Add burger</button>
</form>
